---
import MainLayout from "../layouts/MainLayout.astro";
import LinkButton from "../components/LinkButton.astro";
import MainHeader from "../components/MainHeader.astro";
---
<!-- Importerer genanvendelige komponenter ovenfor med Astro -->

<MainLayout title="opret profil flow, contact information" >
  <MainHeader></MainHeader>

   <section class="flex flex-col md:flex-row items-start max-w-[375px] md:max-w-[1512px] md:items-center md:justify-between gap-8 mt-3 md:mt-0 mb-6 md:mb-6 mx-4 md:mx-20">
    <div class="flex flex-col items-center gap-2 md:gap-4 md:w-[633px] self-stretch bg-none md:bg-[url('/grafik/love.svg')] md:bg-no-repeat md:bg-contain md:bg-center">
        
        <h1>Create a profile</h1>
<p class="font-semibold"> 1 Of 3</p>
<p class="text-center w-[343px] md:w-[358px]">Please enter your contact information to proceed.</p>
    </div>
    
    
    <div class="flex flex-col items-start md:items-center gap-5 self-stretch md:gap-10 md:pt-8 md:pb-10 md:w-[633px]">
        <div class="flex flex-col items-start gap-5 md:gap-7">
<h2 class="text-base md:text-4xl">Contact information</h2>
    <!-- FORMEN -->
   <form class="flex flex-col items-start md:items-center gap-4 self-stretch">
            <div class="flex flex-col items-start gap-1 md:gap-2">
                <p>Name</p>
              <input class="w-[343px] md:w-[420px] h-[38px] md:h-[43px] bg-white-cream border placeholder-black-100 border-black-200 focus-within:border-black-200 focus-within:border-2 focus-within:ring-0 outline-none rounded-lg md:rounded-x text-xs md:text-sm font-manrope" required type="text" id="Name" name="Name" placeholder="Anders Anderson" />
            </div>
            <div class="flex flex-col items-start gap-1 md:gap-2">
                <p>E-mail</p>
              <input class="w-[343px] md:w-[420px] h-[38px] md:h-[43px] bg-white-cream border placeholder-black-100 border-black-200 focus-within:border-black-200 focus-within:border-2 focus-within:ring-0 outline-none rounded-lg md:rounded-x text-xs md:text-sm font-manrope" required type="text" id="email" name="email" placeholder="andersanderson@hotmail.com" />
            </div>
            <div class="flex flex-col items-start gap-1 md:gap-2">
                <p>CPR number</p>
              <input class="w-[343px] md:w-[420px] h-[38px] md:h-[43px] bg-white-cream border placeholder-black-100 border-black-200 focus-within:border-black-200 focus-within:border-2 focus-within:ring-0 outline-none rounded-lg md:rounded-x text-xs md:text-sm font-manrope" required type="text" id="cprnr" name="cprnr" placeholder="**********" />
            </div>
            <div class="flex flex-col items-start gap-1 md:gap-2">
                <p>Username</p>
              <input class="w-[343px] md:w-[420px] h-[38px] md:h-[43px] bg-white-cream border placeholder-black-100 border-black-200 focus-within:border-black-200 focus-within:border-2 focus-within:ring-0 outline-none rounded-lg md:rounded-x text-xs md:text-sm font-manrope" required type="text" id="username" name="username" placeholder="AndersAnd" />
            </div>
            <div class="flex flex-col items-start gap-1 md:gap-2">
                <p>Password</p>
              <input class="w-[343px] md:w-[420px] h-[38px] md:h-[43px] bg-white-cream border placeholder-black-100 border-black-200 focus-within:border-black-200 focus-within:border-2 focus-within:ring-0 outline-none rounded-lg md:rounded-x text-xs md:text-sm font-manrope" required type="text" id="password" name="password" placeholder="*******" />
            </div>
            <div class="flex flex-col items-center content-center pt-10 gap-3">
            <LinkButton variant="submit" href="/opretflow2" id="continue">
              <p>Continue</p>
            </LinkButton>
            <LinkButton variant="tertiary" href="/" id="cancel">
              <p>Cancel</p>
            </LinkButton>
              </div>
    </form>
</div>
</div>
</div>
</section> 
</MainLayout>


<style>
  form:valid{
    .subbtn{
    @apply bg-yellow-500 text-yellow-800;
 
  } 
  }
</style>