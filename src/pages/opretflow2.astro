---
import MainLayout from "../layouts/MainLayout.astro";
import LinkButton from "../components/LinkButton.astro";
import MainHeader from "../components/MainHeader.astro";
---
<!-- Importerer genanvendelige komponenter ovenfor med Astro -->

<MainLayout title="opret profil flow, adresse">
  <MainHeader></MainHeader>
   <!-- Layoutet er vertikalt (en kolonne) indtil md-skærmbredde, hvor det bliver horisontalt (en række) -->
   <section class="flex flex-col md:flex-row items-start md:items-center max-w-[375px] md:max-w-[1512px] md:justify-between gap-8 mt-3 md:mt-0 mb-6 md:mb-6 mx-4 md:mx-20">
    <div class="flex flex-col items-center gap-2 md:gap-4 md:w-[633px] self-stretch bg-none md:bg-[url('/grafik/love.svg')] md:bg-no-repeat md:bg-contain md:bg-center">
        
        <h1>Create a profile</h1>
<p class="font-semibold"> 2 Of 3</p>
<p class="text-center w-[343px] md:w-[358px]">Please fill in your address information below to proceed.</p>
    </div>
    
    <!-- Layoutet er vertikalt (én kolonne), og indholdet er strukket -->
    <div class="flex flex-col items-start md:items-center gap-5 self-stretch md:gap-10 md:pt-10 md:pb-10 md:w-[633px]">
        <div class="flex flex-col items-start gap-5 md:gap-7">
<h2 class="text-base md:text-4xl">Address</h2>
    <!-- FORMEN -->
   <form class="flex flex-col items-start md:items-center gap-4 self-stretch">
    <div class="flex flex-col items-start gap-1 md:gap-2">
      <p>Street name and number</p>
    <input class="w-[343px] md:w-[420px] h-[38px] md:h-[43px] bg-white-cream border placeholder-black-100 border-black-200 focus-within:border-black-200 focus-within:border-2 focus-within:ring-0 outline-none rounded-lg md:rounded-x text-xs md:text-sm font-manrope" required type="text" id="street" name="street" placeholder="Andersonstreet 5" />
  </div>
  <div class="flex flex-col items-start gap-1 md:gap-2">
      <p>Postal code</p>
    <input class="w-[343px] md:w-[420px] h-[38px] md:h-[43px] bg-white-cream border placeholder-black-100 border-black-200 focus-within:border-black-200 focus-within:border-2 focus-within:ring-0 outline-none rounded-lg md:rounded-x text-xs md:text-sm font-manrope" required type="text" id="postalcode" name="postalcode" placeholder="****" />
  </div>
  <div class="flex flex-col items-start gap-1 md:gap-2">
      <p>City</p>
    <input class="w-[343px] md:w-[420px] h-[38px] md:h-[43px] bg-white-cream border placeholder-black-100 border-black-200 focus-within:border-black-200 focus-within:border-2 focus-within:ring-0 outline-none rounded-lg md:rounded-x text-xs md:text-sm font-manrope" required type="text" id="city" name="city" placeholder="Town of Anders" />
  </div>
  <div class="flex flex-col items-start gap-1 md:gap-2">
      <p>Country</p>
    <input class="w-[343px] md:w-[420px] h-[38px] md:h-[43px] bg-white-cream border placeholder-black-100 border-black-200 focus-within:border-black-200 focus-within:border-2 focus-within:ring-0 outline-none rounded-lg md:rounded-x text-xs md:text-sm font-manrope" required type="text" id="country" name="country" placeholder="Duckville" />
  </div>
            <div class="flex flex-col items-center content-center pt-10 gap-3">
             <LinkButton variant="submit" id="continue2" href="/opretflow3">
              <p>Continue</p>
            </LinkButton>
            <LinkButton variant="tertiary" id="cancel" href="/">
              <p>Cancel</p>
            </LinkButton>
              </div>
    </form>
</div>
</div>
</div>
</section> 
</MainLayout>


<style>
  form:valid{
    .subbtn{
    @apply bg-yellow-500 text-yellow-800;
 
  } 
  }
</style>