---
import MainLayout from "../layouts/MainLayout.astro";
import LinkButton from "../components/LinkButton.astro";
import MainHeader from "../components/MainHeader.astro";
---
<!-- Importerer genanvendelige komponenter ovenfor med Astro -->

<MainLayout title="opret profil">
    <!-- Baggrundsbilledet centreres og sættes til at dække hele containeren -->
    <div class="bg-no-repeat bg-center bg-cover" style="background-image: url('/images/opret.webp');">
        <MainHeader></MainHeader>
        <section class="grid place-content-center h-[733px] md:h-[700px]">
    <div class="flex flex-col items-center gap-16 px-5 pt-5 pb-6 bg-yellow-50 opacity-90 rounded-lg md:rounded-xl w-[293px] h-[404px] md:w-[583px] md:h-[554px] ">
<div class="flex flex-col items-center gap-6 self-stretch ">
    <h1>Join Feed A Help</h1>
    <p class="w-[253px] md:w-[311px] text-center">To get started, create a profile and sign up as a donor or receiver.</p>
</div>
<div class="flex flex-col items-center justify-center gap-4">
    <LinkButton variant="secondary" id="become-donor" href="/opretflow1">
        <p>Become a donor</p>
    </LinkButton>
    <p>Or</p>
    <div class="flex flex-col items-center gap-3">
        <LinkButton variant="secondary" id="become-reciever">
            <p>Become a reciever</p>
        </LinkButton>
        <p class="text-xs text-center w-[185px] md:w-[261px]">As a receiver, please proceed on mobile to prove your verification.</p>
    </div>
</div>
    </div>
</section>
</div>
</MainLayout>