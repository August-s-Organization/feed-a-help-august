---
const footerStyling = "bg-yellow-100 text-black-400 px-4 py-6 lg:px-20 lg:py-[60px]";
import { Image } from 'astro:assets';
import myImageLogo from "../assets/images/logo-tekst.svg";
import myImageFooter from "../assets/images/instagram.svg"
import myImageFooter2 from "../assets/images/facebook.svg"
---
<div class:list={[footerStyling]}>
    <a href="/">
        <Image src={myImageLogo} alt="" class="grid justify-self-center w-[152px] lg:w-[458px] mb-7"></Image>
    </a>
    <div class="flex justify-between mb-7">
        <div>
            <p class="mb-1 lg:mb-3">CVR 12345678</p>
            <div class="flex items-center gap-2 mb-1 lg:mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="fill-red-500 w-3 lg:w-6">
                    <path fill-rule="evenodd" d="m3.855 7.286 1.067-.534a1 1 0 0 0 .542-1.046l-.44-2.858A1 1 0 0 0 4.036 2H3a1 1 0 0 0-1 1v2c0 .709.082 1.4.238 2.062a9.012 9.012 0 0 0 6.7 6.7A9.024 9.024 0 0 0 11 14h2a1 1 0 0 0 1-1v-1.036a1 1 0 0 0-.848-.988l-2.858-.44a1 1 0 0 0-1.046.542l-.534 1.067a7.52 7.52 0 0 1-4.86-4.859Z" clip-rule="evenodd" />
                </svg>
                <p>+1 (123) 456-7890</p>              
            </div>
            <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="fill-red-500 w-3 lg:w-6">
                    <path d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
                    <path d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
                </svg>
                <p>feedahelp@gmail.com</p>
            </div>
        </div>
        <div>
            <p class="mb-1 lg:mb-3">Australiensvej 35, 5. th</p>
            <p class="mb-1 lg:mb-3">2100 Copenhagen</p>
            <p>Denmark</p>
        </div>
    </div>
    <div class="grid justify-items-center">
        <p class="mb-2 lg:mb-4">Follow us on social media</p>
        <div class="flex items-center gap-3 lg:gap-6">
            <a href="">
                <Image src={myImageFooter} alt="Facebook logo" class="w-6 lg:w-11"></Image>
            </a>
            <a href="">
                <Image src={myImageFooter2} alt="Instagram logo" class="w-6 lg:w-11"></Image>
            </a>
        </div>
    </div>
</div>
  