---
const secondaryheaderStyling = "text-red-800 pt-5 px-5 md:pt-8 md:px-8 lg:pt-10 lg:px-10 absolute w-full z-10";
import { Image } from 'astro:assets';
import myImageLogo from "/public/grafik/logo.svg";
import myImageLogo3 from "/public/grafik/burgermenu-ikon.svg";
import myImageLogo4 from "/public/grafik/kryds.svg";
---
<!-- Opretter en unik variabel ovenfor med en prob til styling og importerer øvrige komponenter -->

<!-- showmenu styrer visning af menuen, som starter med at være inaktiv. Baggrunden bliver gul når headeren klikkes, og deaktiveres igen, hvis der klikkes uden for den -->
<div x-data="{showmenu: false, activeHeader: false }" :class="{'bg-yellow-100': activeHeader}" @click="activeHeader = !activeHeader" @click.outside="activeHeader = false" class:list={[secondaryheaderStyling]}>
    <div class="flex justify-between">
        <a href="/"><Image src={myImageLogo} alt="Feed A Help logo." class="w-[45px] h-[45px] md:w-[62.5px] md:h-[62.5px] lg:w-20 lg:h-20" /></a>
        <!-- x-on:click skifter værdien af showmenu ved klik, og x-show viser et ikon deraf -->
        <button id="burgermenu" x-on:click="showmenu = ! showmenu">
            <Image src={myImageLogo3} alt="Feed A Help icon." x-show="!showmenu" class="w-[35px] h-[16px] md:w-[45px] md:h-[28px] lg:w-[55px] lg:h-[32px]"/>
            <Image src={myImageLogo4} alt="Cross icon." x-show="showmenu" class="w-[35px] h-[16px] md:w-[45px] md:h-[28px] lg:w-[55px] lg:h-[32px]"/>
        </button>
    </div>
    <!-- x-show viser navigationsmenuen, hvis værdien af showmenu er sand. Den skjules igen ved klik på menuen eller udenfor den. -->
    <nav x-show="showmenu" x-transition x-on:click="showmenu = false" x-on:click.outside="showmenu = false" class="sticky top-0 pt-[250px] lg:py-[108px]">
        <ul>
            <li class="text-center py-7 lg:py-[80px]"><a href="/info"><p class="text-[28px] md:text-[34px] lg:text-[40px] font-normal hover:font-semibold">About</p></a></li>
            <li class="text-center pb-7 lg:pb-[80px]"><a href="/causes"><p class="text-[28px] md:text-[34px] lg:text-[40px] font-normal hover:font-semibold">Causes</p></a></li>
            <li class="text-center pb-[250px] lg:pb-[80px]"><a href="/profile"><p class="text-[28px] md:text-[34px] lg:text-[40px] font-normal hover:font-semibold">Profile</p></a></li>
        </ul>
    </nav>
</div>