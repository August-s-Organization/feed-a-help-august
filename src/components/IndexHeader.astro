---
const indexheaderStyling = "text-red-800 p-5 md:p-8 lg:p-10 absolute w-full z-10";
import { Image } from 'astro:assets';
import myImageLogo from "/public/grafik/logo-tekst.svg";
import myImageLogo3 from "/public/grafik/burgermenu-ikon.svg";
import myImageLogo4 from "/public/grafik/kryds.svg";
---
<!-- Opretter en unik variabel ovenfor til styling og importerer øvrige komponenter -->

<div class="relative">
    <!-- Baggrunden bliver gul når headeren klikkes, og deaktiveres igen, hvis der klikkes uden for den -->
    <div x-data="{showmenu: false, activeHeader: false }" :class="{'bg-yellow-100': activeHeader}" @click="activeHeader = !activeHeader" @click.outside="activeHeader = false" class:list={[indexheaderStyling]}>
        <div class="flex justify-between">
            <a href="/"><Image src={myImageLogo} alt="Feed A Help logo." class="w-[215px] h-[45px] md:w-[336.5px] md:h-[62.5px] lg:w-[458px] lg:h-20" /></a>
            <!-- x-on:click skifter værdien af showmenu ved klik, og x-show viser et ikon deraf -->
            <button id="burgermenu" x-on:click="showmenu = ! showmenu">
                <Image src={myImageLogo3} alt="Feed A Help icon." x-show="!showmenu" class="w-[35px] h-[16px] md:w-[45px] md:h-[28px] lg:w-[55px] lg:h-[32px]"/>
                <Image src={myImageLogo4} alt="Cross icon." x-show="showmenu" class="w-[35px] h-[16px] md:w-[45px] md:h-[28px] lg:w-[55px] lg:h-[32px]"/>
            </button>
        </div>
        <!-- x-show viser menuen, hvis værdien af showmenu er sand -->
        <nav x-show="showmenu" x-transition x-on:click="showmenu = false" x-on:click.outside="showmenu = false" class="sticky top-0 pt-[250px] lg:py-[100px]">
            <ul>
                <li class="text-center py-7 lg:py-[80px]"><a href="/info"><p class="text-[28px] md:text-[34px] lg:text-[40px] font-normal hover:font-semibold">About</p></a></li>
                <li class="text-center pb-7 lg:pb-[80px]"><a href="/causes"><p class="text-[28px] md:text-[34px] lg:text-[40px] font-normal hover:font-semibold">Causes</p></a></li>
                <li class="text-center pb-[250px] lg:pb-[80px]"><a href="/profile"><p class="text-[28px] md:text-[34px] lg:text-[40px] font-normal hover:font-semibold">Profile</p></a></li>
            </ul>
        </nav>
    </div>
</div>