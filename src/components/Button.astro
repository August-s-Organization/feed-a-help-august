---
const { variant } = Astro.props;
const buttonStyling = "flex items-center justify-center space-x-1 rounded-lg";
const variantClasses = {
"default": "bg-black-200 text-white-cream px-4 py-3 md:px-5 md:py-4 w-[343px] md:w-[420px]",
"secondary": "text-red 800 hover:text-red-700 outline outline-black-500 hover:bg-black-500 text-black-500 hover:text-white-white active:text-white-white text-sm md:text-base font-medium px-4 py-3 md:px-5 md:py-4",
"tertiary": "text-black-500 text-sm md:text-base font-medium hover:font-bold",
"cta": "bg-yellow-500 hover:bg-yellow-300 text-yellow-800 text-xl md:text-2xl font-extrabold md:space-x-2 px-4 py-3 md:px-5 md:py-4",
"submit": "subbtn bg-black-200 text-white-cream px-4 py-3 md:px-5 md:py-4 w-[343px] md:w-[420px]",
"action": "text-yellow-900 text-sm md:text-base font-semibold hover:font-extrabold"
};
---
<div>
    <button class:list={[buttonStyling, variantClasses[variant]]}><slot /></button>
</div>