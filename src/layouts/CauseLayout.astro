---
import MainLayout from "./MainLayout.astro";
import SecondaryHeader from "../components/SecondaryHeader.astro";
import LinkButton from "../components/LinkButton.astro";
import { Image } from 'astro:assets';
import myImage2 from "/public/grafik/hjerte.svg";
const {frontmatter} = Astro.props;
---
<!-- Importerer komponenter ovenfor med Astro -->

<!-- Indlæser individuel metadata fra Markdown-filen via Frontmatter -->
<MainLayout title="Causes">
    <SecondaryHeader></SecondaryHeader>
    <!-- Ændrer layoutet til at være horisontalt (en række) ved lg-skærmbredde -->
    <section class="lg:flex lg:flex-row lg:items-center lg:justify-between">
        <div>
            <Image src={frontmatter.coverimage} alt={frontmatter.coveralt} class="h-[287px] lg:w-[655px] lg:h-[914px] object-cover" width={frontmatter.width} height={frontmatter.height} />
        </div>
        <!-- Layoutet er vertikalt (en kolonne) indtil xl-skærmbredde -->
        <article class="flex flex-col items-center lg:w-[857px] lg:h-[771px] pt-3 px-4 pb-6 sm:px-[32px] sm:pb-[32px] md:pt-4 md:px-[48px] md:pb-[40px] lg:pt-5 lg:px-20 lg:pb-[60px] bg-center bg-contain bg-no-repeat bg-[url('/grafik/love.svg')]">
            <div class="pt-3 md:pt-[18px] lg:pt-5 lg:w-[700px]">
                <LinkButton variant="tertiary" href="/causes">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-5 lg:w-6">
                        <path fill-rule="evenodd" d="M9.78 4.22a.75.75 0 0 1 0 1.06L7.06 8l2.72 2.72a.75.75 0 1 1-1.06 1.06L5.47 8.53a.75.75 0 0 1 0-1.06l3.25-3.25a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd" />
                    </svg>
                    <p>Back</p>
                </LinkButton>
                <div class="text-black-400 flex justify-between mt-5 mb-4 lg:mt-10 lg:mb-5">
                    <p class="text-xs lg:text-base">{frontmatter.date}</p>
                    <p class="text-xs lg:text-base">{frontmatter.type}</p>
                </div>
                <h1 class="mb-6 lg:mb-[60px]">{frontmatter.title}</h1>
                <p class="mb-3 lg:mb-6">{frontmatter.description}</p>
                <slot />
                <div class="flex justify-center gap-[60px] lg:gap-[100px] mt-6 mb-10 lg:mt-[60px] lg:mb-20">
                    <div class="flex flex-col items-center gap-1">
                        <p class="font-semibold">{frontmatter.amount}</p>
                        <p class="text-xs lg:text-base">{frontmatter.amountgoal}</p>
                    </div>
                    <div class="flex flex-col items-center gap-1">
                        <p class="font-semibold">{frontmatter.donors}</p>
                        <p class="text-xs lg:text-base">Donors</p>
                    </div>
                    <div class="flex flex-col items-center gap-1">
                        <p class="font-semibold">{frontmatter.time}</p>
                        <p class="text-xs lg:text-base">{frontmatter.status}</p>
                    </div>
                </div>
                <div class="flex flex-col items-center gap-1">
                    <LinkButton variant="cta" href="/donate">
                        <p>Donate now</p>
                        <Image src={myImage2} alt="Heart icon" class="w-[13.33px] h-[12.23px] lg:w-[20px] lg:h-[18.35px]" loading="lazy" />
                    </LinkButton>
                </div>
            </div>
        </article>
    </section>
    <section>
        <div class="flex justify-center">
            <iframe src={frontmatter.map} style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" class="w-full h-[200px] md:h-[331px] lg:h-[462px]"></iframe>
        </div>
    </section>
</MainLayout>